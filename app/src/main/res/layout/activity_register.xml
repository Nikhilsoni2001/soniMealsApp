<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".activity.RegisterActivity">

    <EditText
        android:id="@+id/etName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="50dp"
        android:background="@android:color/white"
        android:hint="@string/name_min_3_charracters"
        android:inputType="text"
        android:maxLength="20"
        android:maxLines="1"
        android:padding="10dp" />

    <EditText
        android:id="@+id/etMail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/etName"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/white"
        android:hint="@string/email_adress"
        android:inputType="textEmailAddress"
        android:maxLines="1"
        android:padding="10dp" />

    <EditText
        android:id="@+id/etMobileNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/etMail"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/white"
        android:hint="@string/mobile_number_10_digits"
        android:inputType="phone"
        android:maxLength="10"
        android:maxLines="1"
        android:padding="10dp" />

    <EditText
        android:id="@+id/etAdress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/etMobileNumber"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/white"
        android:hint="@string/delivery_adrress"
        android:inputType="text"
        android:maxLines="1"
        android:padding="10dp" />

    <EditText
        android:id="@+id/etPasswrd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/etAdress"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/white"
        android:hint="@string/passwrd"
        android:inputType="textPassword"
        android:maxLength="20"
        android:maxLines="1"
        android:padding="10dp" />

    <EditText
        android:id="@+id/etConfirmPasswrd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/etPasswrd"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/white"
        android:hint="@string/confirm_passwrd"
        android:inputType="textPassword"
        android:maxLength="20"
        android:maxLines="1"
        android:padding="10dp" />

    <Button
        android:id="@+id/btnRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/etConfirmPasswrd"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="40dp"
        android:background="@color/colorPrimaryDark"
        android:text="@string/register"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold" />

</RelativeLayout>